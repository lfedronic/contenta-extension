{
    "name": "Hello Extensions of the world!",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation",
        "webRequest"
    ],
    "host_permissions": ["https://*/*"],
    "background": {
    "service_worker": "background.js"
    },
    "action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extensions.png"
    }
   
}
